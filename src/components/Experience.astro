---
// Experience.astro component
---

<section class="py-16 md:py-20 bg-[hsl(var(--color-background))]">
  <div class="container mx-auto px-4 max-w-[1000px]">
    <div class="mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-[hsl(var(--color-foreground))] mb-8">
        Experience & Education
      </h2>
      
      <!-- Toggle -->
      <div class="inline-flex rounded-lg border-2 border-[hsl(var(--color-border))] bg-[hsl(var(--color-card))] p-1 shadow-sm">
        <button 
          id="work-tab"
          class="tab-button active px-6 py-2.5 rounded-md text-sm font-semibold transition-all cursor-pointer"
        >
          Work Experience
        </button>
        <button 
          id="education-tab"
          class="tab-button px-6 py-2.5 rounded-md text-sm font-semibold transition-all cursor-pointer"
        >
          Education
        </button>
      </div>
    </div>

    <!-- Work Experience Content -->
    <div id="work-content" class="content-section space-y-4 max-w-[800px]">
      <a 
        href="https://www.acmetalfabricating.com/" 
        target="_blank"
        rel="noopener noreferrer"
        class="group block bg-[hsl(var(--color-card))] border-2 border-[hsl(var(--color-border))] rounded-lg p-5 hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all no-underline"
      >
        <div class="flex items-center justify-between gap-6">
          <div class="flex items-center gap-4 flex-1 min-w-0">
            <!-- Company Logo -->
            <div class="w-14 h-14 bg-[hsl(var(--color-muted))] rounded-lg flex items-center justify-center flex-shrink-0 border border-[hsl(var(--color-border))] group-hover:border-[hsl(var(--color-primary))] transition-colors">
              <span class="text-xs text-[hsl(var(--color-muted-foreground))]">Logo</span>
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-base font-semibold text-[hsl(var(--color-foreground))] group-hover:text-[hsl(var(--color-primary))] transition-colors truncate">
                Sales & Marketing Development Strategist
              </h3>
              <p class="text-sm text-[hsl(var(--color-muted-foreground))]">
                AC Metal Fabricating Limited, Cunningham Sheet Metal (Windsor) Limited
              </p>
              <p class="text-sm text-[hsl(var(--color-muted-foreground))]">
                Aug 2025 - Present
              </p>
            </div>
          </div>
          <svg class="w-5 h-5 text-[hsl(var(--color-muted-foreground))] group-hover:text-[hsl(var(--color-primary))] transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
        </div>
      </a>

      <a 
        href="https://www.scelta.ca/" 
        target="_blank"
        rel="noopener noreferrer"
        class="group block bg-[hsl(var(--color-card))] border-2 border-[hsl(var(--color-border))] rounded-lg p-5 hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all no-underline"
      >
        <div class="flex items-center justify-between gap-6">
          <div class="flex items-center gap-4 flex-1 min-w-0">
            <!-- Company Logo -->
