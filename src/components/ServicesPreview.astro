---
// ServicesPreview.astro component
import business from '../assets/services/business.jpg';
---

<section class="py-20 md:py-32 bg-[hsl(var(--color-background))]">
  <div class="container mx-auto px-4 max-w-[1200px]">
    <div class="bg-[hsl(var(--color-card))] rounded-2xl shadow-xl p-8 md:p-12">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Left side - Content -->
        <div class="space-y-6">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-[hsl(var(--color-foreground))]">
            WE EMPOWER YOUR BUSINESS
          </h2>
          
          <div class="space-y-4 text-[hsl(var(--color-muted-foreground))]">
            <p class="text-lg">
              How many hours a week do you waste fighting technology instead of running your business?
            </p>
            
            <p class="text-lg">
              Websites. Social media. Content capture. IT support. All the tech and digital work that keeps you from actually growing your business.
            </p>
            
            <p class="text-lg">
              We fit your business, not a package. Let Saorsa handle exactly what you need - whether that's one service or your entire digital operations.
            </p>
          </div>
          
          <div class="pt-4">
            <a 
              href="/services" 
              class="inline-block px-6 py-3 bg-[hsl(var(--color-primary))] text-[hsl(var(--color-primary-foreground))] rounded-md font-medium hover:bg-[hsl(var(--color-accent))] transition-colors no-underline shadow-md"
            >
              Explore Our Services
            </a>
          </div>
        </div>
        
        <!-- Right side - Image -->
        <div class="aspect-square rounded-lg overflow-hidden shadow-lg border-2 border-[hsl(var(--color-border))]">
          <img src={business.src} alt="Business professionals collaborating" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
  </div>
</section>