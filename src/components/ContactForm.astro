---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Form - Saorsa Media">
  <section class="py-20 bg-gradient-to-b from-[hsl(var(--color-background))] to-[hsl(var(--color-muted))]">
    <div class="container mx-auto px-4 max-w-[900px]">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-[hsl(var(--color-foreground))] mb-4">
          Contact Us
        </h1>
        <p class="text-lg text-[hsl(var(--color-muted-foreground))] max-w-[600px] mx-auto">
          Select the services you're interested in and we'll get back to you within 24 hours.
        </p>
      </div>

      <!-- Form Card -->
      <div class="bg-[hsl(var(--color-background))] rounded-lg shadow-lg border border-[hsl(var(--color-border))] p-8 md:p-12">
        <form
          action="https://formspree.io/f/mojlondj"
          method="POST"
          class="space-y-10"
        >
          <!-- Contact Information -->
          <div class="space-y-6">
            <div class="flex items-center space-x-2 mb-6">
              <div class="h-8 w-1 bg-[hsl(var(--color-primary))] rounded-full"></div>
              <h2 class="text-2xl font-semibold text-[hsl(var(--color-foreground))]">Contact Information</h2>
            </div>
            
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-[hsl(var(--color-foreground))] mb-2">
                  Name <span class="text-[hsl(var(--color-primary))]">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 border border-[hsl(var(--color-border))] rounded-md focus:outline-none focus:ring-2 focus:ring-[hsl(var(--color-primary))] focus:border-transparent transition-all bg-[hsl(var(--color-background))]"
                  placeholder="John Doe"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-[hsl(var(--color-foreground))] mb-2">
                  Phone
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 border border-[hsl(var(--color-border))] rounded-md focus:outline-none focus:ring-2 focus:ring-[hsl(var(--color-primary))] focus:border-transparent transition-all bg-[hsl(var(--color-background))]"
                  placeholder="+1 (555) 000-0000"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-[hsl(var(--color-foreground))] mb-2">
                Email <span class="text-[hsl(var(--color-primary))]">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-[hsl(var(--color-border))] rounded-md focus:outline-none focus:ring-2 focus:ring-[hsl(var(--color-primary))] focus:border-transparent transition-all bg-[hsl(var(--color-background))]"
                placeholder="john@example.com"
              />
            </div>
          </div>

          <!-- Website Services -->
          <div class="space-y-6">
            <div class="flex items-center space-x-2 mb-6">
              <div class="h-8 w-1 bg-[hsl(var(--color-primary))] rounded-full"></div>
              <h2 class="text-2xl font-semibold text-[hsl(var(--color-foreground))]">Website Services</h2>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4">
              <label class="flex items-start space-x-3 cursor-pointer p-4 rounded-lg border border-[hsl(var(--color-border))] hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all group">
                <input
                  type="checkbox"
                  name="services"
                  value="Website Creation & Hosting"
                  class="mt-1 h-5 w-5 text-[hsl(var(--color-primary))] border-[hsl(var(--color-border))] rounded focus:ring-[hsl(var(--color-primary))] accent-[hsl(var(--color-primary))]"
                />
                <div>
                  <span class="font-medium text-[hsl(var(--color-foreground))] block mb-1 group-hover:text-[hsl(var(--color-primary))] transition-colors">Website Creation & Hosting</span>
                  <p class="text-xs text-[hsl(var(--color-muted-foreground))]">Custom websites and reliable hosting solutions</p>
                </div>
              </label>

              <label class="flex items-start space-x-3 cursor-pointer p-4 rounded-lg border border-[hsl(var(--color-border))] hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all group">
                <input
                  type="checkbox"
                  name="services"
                  value="Domain Management & Custom Emails"
                  class="mt-1 h-5 w-5 text-[hsl(var(--color-primary))] border-[hsl(var(--color-border))] rounded focus:ring-[hsl(var(--color-primary))] accent-[hsl(var(--color-primary))]"
                />
                <div>
                  <span class="font-medium text-[hsl(var(--color-foreground))] block mb-1 group-hover:text-[hsl(var(--color-primary))] transition-colors">Domain Management & Custom Emails</span>
                  <p class="text-xs text-[hsl(var(--color-muted-foreground))]">Professional email addresses and domain setup</p>
                </div>
              </label>

              <label class="flex items-start space-x-3 cursor-pointer p-4 rounded-lg border border-[hsl(var(--color-border))] hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all group">
                <input
                  type="checkbox"
                  name="services"
                  value="Social Media Setup & Branding"
                  class="mt-1 h-5 w-5 text-[hsl(var(--color-primary))] border-[hsl(var(--color-border))] rounded focus:ring-[hsl(var(--color-primary))] accent-[hsl(var(--color-primary))]"
                />
                <div>
                  <span class="font-medium text-[hsl(var(--color-foreground))] block mb-1 group-hover:text-[hsl(var(--color-primary))] transition-colors">Social Media Setup & Branding</span>
                  <p class="text-xs text-[hsl(var(--color-muted-foreground))]">One-time setup and brand presence establishment</p>
                </div>
              </label>

              <label class="flex items-start space-x-3 cursor-pointer p-4 rounded-lg border border-[hsl(var(--color-border))] hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all group">
                <input
                  type="checkbox"
                  name="services"
                  value="Social Media Management"
                  class="mt-1 h-5 w-5 text-[hsl(var(--color-primary))] border-[hsl(var(--color-border))] rounded focus:ring-[hsl(var(--color-primary))] accent-[hsl(var(--color-primary))]"
                />
                <div>
                  <span class="font-medium text-[hsl(var(--color-foreground))] block mb-1 group-hover:text-[hsl(var(--color-primary))] transition-colors">Social Media Management</span>
                  <p class="text-xs text-[hsl(var(--color-muted-foreground))]">Ongoing content creation and posting</p>
                </div>
              </label>
            </div>
          </div>

          <!-- Content Creation -->
          <div class="space-y-6">
            <div class="flex items-center space-x-2 mb-6">
              <div class="h-8 w-1 bg-[hsl(var(--color-primary))] rounded-full"></div>
              <h2 class="text-2xl font-semibold text-[hsl(var(--color-foreground))]">Content Creation</h2>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4">
              <label class="flex items-start space-x-3 cursor-pointer p-4 rounded-lg border border-[hsl(var(--color-border))] hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all group">
                <input
                  type="checkbox"
                  name="services"
                  value="Photo & Video Production"
                  class="mt-1 h-5 w-5 text-[hsl(var(--color-primary))] border-[hsl(var(--color-border))] rounded focus:ring-[hsl(var(--color-primary))] accent-[hsl(var(--color-primary))]"
                />
                <div>
                  <span class="font-medium text-[hsl(var(--color-foreground))] block mb-1 group-hover:text-[hsl(var(--color-primary))] transition-colors">Photo & Video Production</span>
                  <p class="text-xs text-[hsl(var(--color-muted-foreground))]">Professional photo and video content for your business</p>
                </div>
              </label>

              <label class="flex items-start space-x-3 cursor-pointer p-4 rounded-lg border border-[hsl(var(--color-border))] hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all group">
                <input
                  type="checkbox"
                  name="services"
                  value="Content Editing"
                  class="mt-1 h-5 w-5 text-[hsl(var(--color-primary))] border-[hsl(var(--color-border))] rounded focus:ring-[hsl(var(--color-primary))] accent-[hsl(var(--color-primary))]"
                />
                <div>
                  <span class="font-medium text-[hsl(var(--color-foreground))] block mb-1 group-hover:text-[hsl(var(--color-primary))] transition-colors">Content Editing</span>
                  <p class="text-xs text-[hsl(var(--color-muted-foreground))]">Professional editing for photos and videos</p>
                </div>
              </label>

              <label class="flex items-start space-x-3 cursor-pointer p-4 rounded-lg border border-[hsl(var(--color-border))] hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all group">
                <input
                  type="checkbox"
                  name="services"
                  value="Professional Headshots"
                  class="mt-1 h-5 w-5 text-[hsl(var(--color-primary))] border-[hsl(var(--color-border))] rounded focus:ring-[hsl(var(--color-primary))] accent-[hsl(var(--color-primary))]"
                />
                <div>
                  <span class="font-medium text-[hsl(var(--color-foreground))] block mb-1 group-hover:text-[hsl(var(--color-primary))] transition-colors">Professional Headshots</span>
                  <p class="text-xs text-[hsl(var(--color-muted-foreground))]">High-quality headshots for you and your team</p>
                </div>
              </label>
            </div>
          </div>

          <!-- IT / Computer Management -->
          <div class="space-y-6">
            <div class="flex items-center space-x-2 mb-6">
              <div class="h-8 w-1 bg-[hsl(var(--color-primary))] rounded-full"></div>
              <h2 class="text-2xl font-semibold text-[hsl(var(--color-foreground))]">IT / Computer Management</h2>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4">
              <label class="flex items-start space-x-3 cursor-pointer p-4 rounded-lg border border-[hsl(var(--color-border))] hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all group">
                <input
                  type="checkbox"
                  name="services"
                  value="Custom Computers & Repair"
                  class="mt-1 h-5 w-5 text-[hsl(var(--color-primary))] border-[hsl(var(--color-border))] rounded focus:ring-[hsl(var(--color-primary))] accent-[hsl(var(--color-primary))]"
                />
                <div>
                  <span class="font-medium text-[hsl(var(--color-foreground))] block mb-1 group-hover:text-[hsl(var(--color-primary))] transition-colors">Custom Computers & Repair</span>
                  <p class="text-xs text-[hsl(var(--color-muted-foreground))]">Custom PC builds and computer repair services</p>
                </div>
              </label>

              <label class="flex items-start space-x-3 cursor-pointer p-4 rounded-lg border border-[hsl(var(--color-border))] hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all group">
                <input
                  type="checkbox"
                  name="services"
                  value="License Management"
                  class="mt-1 h-5 w-5 text-[hsl(var(--color-primary))] border-[hsl(var(--color-border))] rounded focus:ring-[hsl(var(--color-primary))] accent-[hsl(var(--color-primary))]"
                />
                <div>
                  <span class="font-medium text-[hsl(var(--color-foreground))] block mb-1 group-hover:text-[hsl(var(--color-primary))] transition-colors">License Management</span>
                  <p class="text-xs text-[hsl(var(--color-muted-foreground))]">Microsoft 365, software licenses, and subscriptions</p>
                </div>
              </label>

              <label class="flex items-start space-x-3 cursor-pointer p-4 rounded-lg border border-[hsl(var(--color-border))] hover:border-[hsl(var(--color-primary))] hover:shadow-md transition-all group">
                <input
                  type="checkbox"
                  name="services"
                  value="IT Consulting & Tech Support"
                  class="mt-1 h-5 w-5 text-[hsl(var(--color-primary))] border-[hsl(var(--color-border))] rounded focus:ring-[hsl(var(--color-primary))] accent-[hsl(var(--color-primary))]"
                />
                <div>
                  <span class="font-medium text-[hsl(var(--color-foreground))] block mb-1 group-hover:text-[hsl(var(--color-primary))] transition-colors">IT Consulting & Tech Support</span>
                  <p class="text-xs text-[hsl(var(--color-muted-foreground))]">Technical consulting and ongoing support</p>
                </div>
              </label>
            </div>
          </div>

          <!-- Additional Message -->
          <div class="space-y-6">
            <div class="flex items-center space-x-2 mb-6">
              <div class="h-8 w-1 bg-[hsl(var(--color-primary))] rounded-full"></div>
              <h2 class="text-2xl font-semibold text-[hsl(var(--color-foreground))]">Additional Details</h2>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-[hsl(var(--color-foreground))] mb-2">
                Tell us about your needs
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                class="w-full px-4 py-3 border border-[hsl(var(--color-border))] rounded-md focus:outline-none focus:ring-2 focus:ring-[hsl(var(--color-primary))] focus:border-transparent transition-all bg-[hsl(var(--color-background))] resize-none"
                placeholder="Tell us more about your project, timeline, budget, or any specific requirements..."
              ></textarea>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <button
              type="submit"
              class="w-full px-8 py-4 bg-[hsl(var(--color-primary))] text-[hsl(var(--color-primary-foreground))] rounded-md font-semibold hover:bg-[hsl(var(--color-accent))] transition-all transform hover:scale-[1.02] active:scale-[0.98] shadow-lg"
            >
              Submit Request â†’
            </button>
            <p class="text-xs text-center text-[hsl(var(--color-muted-foreground))] mt-3">
              We'll get back to you within 24 hours
            </p>
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>